<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeagueTok" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aqua</item>
        <item name="colorSecondaryVariant">@color/aqua_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="actionBarTheme">@style/ActionBarStyle</item>

        <!-- Customize your theme here. -->
        <!--item name="colorAccent">@color/black</item-->
    </style>

    <style name="Theme.LeagueTok.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LeagueTok.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LeagueTok.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

</resources>